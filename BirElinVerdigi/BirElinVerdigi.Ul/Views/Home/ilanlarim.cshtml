@model System.Collections.Generic.List<BirElinVerdigi.Ul.Models.KategorilerViewModel>


<br />
<br />
<div class="card">
    <div class="jumbotron">
        <div class="container-fluid">
            @if (TempData["silindi"] != null)
            {
                <div class="alert alert-warning" role="alert">
                    @TempData["silindi"]
                </div>
            }
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>İlan Başlık</th>
                        <th>ilan Bilgi</th>
                        <th>İlan Kategori</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ilanBaslik</td>
                            <td>@item.ilanBilgi</td>
                            <td>@item.kategoriAd</td>
                            <td>
                                <a class="btn btn-success" asp-controller="Home" asp-action="Güncelle" asp-route-id="@item.ilanID" data-toggle="modal"  data-target="#ilangüncelle">Güncelle</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-controller="Home" asp-action="ilanSil" asp-route-id="@item.ilanID" >Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="ilangüncelle" tabindex="-1" role="dialog" aria-labelledby="ilangüncelle"
