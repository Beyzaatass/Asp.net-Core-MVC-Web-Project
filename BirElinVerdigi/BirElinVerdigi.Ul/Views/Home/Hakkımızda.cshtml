
@model BirElinVerdigi.Ul.Models.LoginViewModel
<!-- slider-->
    <div class="container">
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-2">
                <form class="form-inline my-2 my-lg-0">
                    <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#login" id="girisButon">
                        Giriş Yap
                    </button>
                </form>
            </div>
        </div>
    </div>



<!-- Modal1-->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="login"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card">
                    <img src="~/images/login.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">Giriş Yap</h3>
                        <form asp-controller="Home" asp-action="Login" method="post">
                            <div>
                                <label for="kullaniciAdi">Kullanıcı Adı:</label>
                                <input asp-for="KullaniciAdi" type="text" class="form-control" id="kullaniciAdi"
                                       placeholder="Kullanıcı Adı" required name="kullaniciAdi">
                                <label for="password">Şifre:</label>
                                <input asp-for="Sifre" type="password" class="form-control" id="password" placeholder="Password"
                                       required name="Sifre"> <br>
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-info">
                                        <input type="radio" name="options" id="kurumsal" autocomplete="off"
                                               checked> Kurumsal
                                    </label>

                                    <label class="btn btn-info">
                                        <input type="radio" name="options" id="bireysel"
                                               autocomplete="off">Bireysel
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="text-right col-md">
                                        <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#signin">
                                            Kayıt Ol
                                        </button>
                                        <button class="btn btn--radius btn-success" type="submit" id="girisYap" value="Login">
                                            Giriş
                                            Yap
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal 2 -->
<div class="modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="signin"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container">
                  
                    <div class="row">
                        <div class="col">
                            <form asp-controller="Home" asp-action="kayitEkle" method="post">
                                <div class="form-group">
                                    <label asp-for="kimlikNumarasi" for="KimlikNo">Kimlik Numarası:</label>
                                    <input asp-for="kimlikNumarasi" type="number" class="form-control form-control" id="KimlikNo" placeholder="Kimlik No" required name="kimlikNumarasi">
                                </div>
                                <div class="form-group">
                                    <label asp-for="uyeAd" for="firstName">Ad :</label>
                                    <input asp-for="uyeAd" type="text" class="form-control form-control" id="firstName" placeholder="Ad" required name="uyeAd">
                                </div>
                                <div class="form-group">
                                    <label asp-for="uyeSoyad" for="lastName">Soyad:</label>
                                    <input asp-for="uyeSoyad" type="text" class="form-control" id="lastName" placeholder="Soyad" required name="uyeSoyad">
                                </div>
                                <div class="form-group">
                                    <label asp-for="uyeEmail" for="email">Eposta:</label>
                                    <input asp-for="uyeEmail" type="email" class="form-control" id="email" placeholder="E-Posta" required name="uyeEmail">
                                </div>
                                <div class="form-group">
                                    <label asp-for="uyeRolID" for="kullaniciKategori">Kullanıcı Kategori:</label>
                                    <select asp-for="uyeRolID" name="uyeRolID" id="kullaniciKategori" class="form-control">
                                        <option value="1">Kurumsal</option>
                                        <option value="2">Bireysel</option>
                                    </select>
                                </div>




                                <div class="form-group">
                                    <label asp-for="kullaniciAdi" for="kullaniciAdi">Kullanıcı Adı:</label>
                                    <input asp-for="kullaniciAdi" type="text" class="form-control" id="kullaniciAdi" placeholder="Kullanıcı Adı" required name="kullaniciAdi">
                                </div>
                                <div class="form-group">
                                    <label asp-for="sifre" for="password">Şifre:</label>
                                    <input asp-for="sifre" type="password" class="form-control" id="password" placeholder="Şifre" required name="sifre">
                                </div>

                                <button type="submit" class="btn btn-primary btn-rounded" value="kayıtEkle">Kayıt Ol</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


